prefixes:
  acl: http://www.w3.org/ns/auth/acl#
  solid: http://www.w3.org/ns/solid/terms#
  idsa: https://w3id.org/idsa/core/
  idlab-fn: http://example.com/idlab/function/
  grel: http://users.ugent.be/~bjdmeest/function/grel.ttl#
  ex: http://example.com/
  elec: http://w3id.org/CEON/demo/electronics/
  ns1: http://w3id.org/CEON/ontology/actorODP/
  ns2: http://qudt.org/schema/qudt/
  ns3: http://w3id.org/CEON/ontology/resourceODP/
  ns4: http://w3id.org/CEON/ontology/provenance/
  ns5: http://w3id.org/CEON/ontology/product/
  formats: http://www.w3.org/ns/formats/
  rmli: https://w3id.org/imec/rml/
  LT: http://knows.base/logical_target/
  T: http://knows.base/target/
  rml: http://semweb.mmlab.be/ns/rml#
  rmlt: http://semweb.mmlab.be/ns/rml-target#

base: http://knows.com/base/
sources:
  data:
    access: ./electronics_user3_data.csv
    referenceFormulation: csv
    delimiter: ','
    'null':
      - ''
  acl:
    access: ./electronics_user3_acl.csv
    referenceFormulation: csv
  empty:
    access: ./empty.csv
    referenceFormulation: csv
targets:
  ceon_index:
    type: solid_resource
    access: ${OD_CSS11_BASE_URL}/electronics_user3/ceon/index
    serialization: jsonld
    authentication: auth
authentications:
  auth:
    username: electronics_user3@example.com
    password: electronics_user3
    oidc_issuer: ${OD_CSS11_BASE_URL}/
    web_id: ${OD_CSS11_BASE_URL}/electronics_user3/profile/card#me
mappings:
  products:
    sources: data
    s:
      value: ex:product-$(Part Number code)
      targets: LT:product-$(Part Number code)
    po:
      - [ rdfs:label, $(Product name) ]
      - [ a, elec:ElectronicsProduct~iri ]
      - [ elec:hasCompliance, ex:$(Part Number code)-REACHCompliance~iri ]
      - p: ns3:hasMatter
        o: elec:RareEarthMaterial~iri
        condition:
          function: idlab-fn:equal
          parameters:
            - [ grel:valueParameter, $(Does it contain any Rare Earth?) ]
            - [ grel:valueParameter2, Yes ]
  manufacturer:
    sources: data
    s:
      value: ex:manufacturer-$(Company code)
      targets: LT:product-$(Part Number code)
    po:
      - [ elec:siteCountry, $(Site Country) ]
  producing:
    sources: data
    s:
      value: ex:producing-$(Company code)-$(Part Number code)
      targets: LT:product-$(Part Number code)
    po:
      - [ ns1:participantRole, http://w3id.org/CEON/ontology/actor/manufacturer~iri ]
      - [ ns1:participatingActor, ex:manufacturer-$(Company code)~iri ]
      - [ ns1:participatingResource, ex:product-$(Part Number code)~iri ]
  reachcompliance:
    sources: data
    s:
      value: ex:$(Part Number code)-REACHCompliance
      targets: LT:product-$(Part Number code)
    po:
      - [ a, [ ns5:Compliance~iri, ns4:Statement~iri ] ]
      - [ ns5:complianceWith, elec:REACH~iri ]
      - [ ns5:hasCertificate, $(REACH)~iri ]
      - [ ns4:statementAbout, ex:product-$(Part Number code)~iri ]
  precustomer:
    sources: data
    s:
      value: ex:product-$(Part Number code)-PreCustomerRecycledContent
      targets: LT:product-$(Part Number code)
    po:
      - [ a, [ elec:PreCustomerRecycledContent~iri, ns4:Statement~iri ] ]
      - [ ns2:hasUnit, https://qudt.org/vocab/unit/PERCENT~iri ]
      - [ ns2:numericValue, $(Pre-consumer recycled material amount), xsd:decimal ]
      - [ ns4:statementAbout, ex:product-$(Part Number code)~iri ]
  postcustomer:
    sources: data
    s:
      value: ex:product-$(Part Number code)-PostCustomerRecycledContent
      targets: LT:product-$(Part Number code)
    po:
      - [ a, [ elec:PostCustomerRecycledContent~iri, ns4:Statement~iri ] ]
      - [ ns2:hasUnit, https://qudt.org/vocab/unit/PERCENT~iri ]
      - [ ns2:numericValue, $(Post-consumer recycled material amount), xsd:decimal ]
      - [ ns4:statementAbout, ex:product-$(Part Number code)~iri ]
  neodymium:
    sources: data
    s:
      value: ex:product-$(Part Number code)-NeodymiumComposition
      targets: LT:product-$(Part Number code)
    po:
      - [ a, [ ns5:MatterComposition~iri, ns4:Statement~iri ] ]
      - [ ns5:associatedWithMatter, ex:Nd~iri ]
      - [ ns2:hasUnit, https://qudt.org/vocab/unit/PERCENT~iri ]
      - [ ns2:numericValue, $(Neodymium), xsd:decimal ]
      - [ ns5:compositionOf,ex:product-$(Part Number code)~iri ]
  dysprosium:
    sources: data
    s:
      value: ex:product-$(Part Number code)-DysprosiumComposition
      targets: LT:product-$(Part Number code)
    po:
      - [ a, [ ns5:MatterComposition~iri, ns4:Statement~iri ] ]
      - [ ns5:associatedWithMatter, ex:Dy~iri ]
      - [ ns2:hasUnit, https://qudt.org/vocab/unit/PERCENT~iri ]
      - [ ns2:numericValue, $(Dysprosium), xsd:decimal ]
      - [ ns5:compositionOf,ex:product-$(Part Number code)~iri ]
  read_acl:
    sources: acl
    s:
      value: ex:electronics_user3_$(access_to)_read_acl
      targets: LT:$(access_to)-acl
    po:
      - [ a, acl:Authorization~iri ]
      - [ acl:mode, acl:Read~iri ]
      - [ acl:accessTo, ${OD_CSS11_BASE_URL}/electronics_user3/ceon/$(access_to)~iri ]
      - p: acl:agent
        o:
          value: $(agent_webid)
          type: iri
        condition:
          function: idlab-fn:equal
          parameters:
            - [ grel:valueParameter, $(read_access) ]
            - [ grel:valueParameter2, Yes ]
  write_acl:
    sources: acl
    s:
      value: ex:electronics_user3_$(access_to)_write_acl
      targets: LT:$(access_to)-acl
    po:
      - [ a, acl:Authorization~iri ]
      - [ acl:mode, acl:Write~iri ]
      - [ acl:accessTo, ${OD_CSS11_BASE_URL}/electronics_user3/ceon/$(access_to)~iri ]
      - p: acl:agent
        o:
          value: $(agent_webid)
          type: iri
        condition:
          function: idlab-fn:equal
          parameters:
            - [ grel:valueParameter, $(write_access) ]
            - [ grel:valueParameter2, Yes ]
  control_acl:
    sources: acl
    s:
      value: ex:electronics_user3_$(access_to)_control_acl
      targets: LT:$(access_to)-acl
    po:
      - [ a, acl:Authorization~iri ]
      - [ acl:mode, acl:Control~iri ]
      - [ acl:accessTo, ${OD_CSS11_BASE_URL}/electronics_user3/ceon/$(access_to)~iri ]
      - p: acl:agent
        o:
          value: $(agent_webid)
          type: iri
        condition:
          function: idlab-fn:equal
          parameters:
            - [ grel:valueParameter, $(control_access) ]
            - [ grel:valueParameter2, Yes ]
  index:
    sources: data
    s:
      value: ex:index
      targets: ceon_index
    po:
      - p: rdfs:seeAlso
        o:
          value: ${OD_CSS11_BASE_URL}/electronics_user3/ceon/product-$(Part Number code)
          type: iri
  # reusable authentication
  UserAuthentication:
    sources: empty
    s:
      value: ex:authentication_user3
      targets: ThisMapping
    po:
      - [ a, idsa:UserAuthentication~iri ]
      - [ idsa:authUsername, electronics_user3@example.com ]
      - [ idsa:authPassword, electronics_user3 ]
      - [ solid:oidcIssuer, ${OD_CSS11_BASE_URL}/~iri ]
      - [ rmli:webId, ${OD_CSS11_BASE_URL}/electronics_user3/profile/card#me~iri ]
  # dynamic targets
  LT-product:
    sources: data
    s:
      value: LT:product-$(Part Number code)
      targets: ThisMapping
    po:
      - [a, rml:LogicalTarget~iri]
      - [rmlt:serialization, formats:JSON-LD~iri]
      - [rmlt:target, T:product-$(Part Number code)~iri]
  T-product:
    sources: data
    s:
      value: T:product-$(Part Number code)
      targets: ThisMapping
    po:
      - [a, rmlt:Target~iri]
      - [a, rmli:SolidResourceTarget~iri]
      - [rmli:resource, ${OD_CSS11_BASE_URL}/electronics_user3/ceon/product-$(Part Number code)]
      - [idsa:userAuthentication, ex:authentication_user3~iri]
  LT-acl:
    sources: acl
    s:
      value: LT:$(access_to)-acl
      targets: ThisMapping
    po:
      - [a, rml:LogicalTarget~iri]
      - [rmlt:serialization, formats:Turtle~iri]
      - p: rmlt:target
        o: T:$(access_to)-acl~iri
  T-acl:
    sources: acl
    s:
      value: T:$(access_to)-acl
      targets: ThisMapping
    po:
      - [a, rmlt:Target~iri]
      - [a, rmli:SolidAclTarget~iri]
      - [rmli:forResource, ${OD_CSS11_BASE_URL}/electronics_user3/ceon/$(access_to)~iri]
      - [idsa:userAuthentication, ex:authentication_user3~iri]
