  geo: http://www.w3.org/2003/01/geo/wgs84_pos#
  bot: https://w3id.org/bot#

base: http://knows.com/base/
sources:
  company:
    access: ./construction_user3_company.csv
    referenceFormulation: csv
  acl:
    access: ./construction_user3_acl.csv
    referenceFormulation: csv
targets:
  ceon_data:
    type: solid_resource
    access: ${OD_CSS11_BASE_URL}/construction_user3/ceon/data
    serialization: jsonld
    authentication: auth
  ceon_data_acl:
    type: solid_acl
    access: ${OD_CSS11_BASE_URL}/construction_user3/ceon/data
    serialization: turtle
    authentication: auth
  ceon_index:
    type: solid_resource
    access: ${OD_CSS11_BASE_URL}/construction_user3/ceon/index
    serialization: jsonld
    authentication: auth
  ceon_index_acl:
    type: solid_acl
    access: ${OD_CSS11_BASE_URL}/construction_user3/ceon/index
    serialization: turtle
    authentication: auth
authentications:
  auth:
    username: construction_user3@example.com
    password: construction_user3
    oidc_issuer: ${OD_CSS11_BASE_URL}/
    web_id: ${OD_CSS11_BASE_URL}/construction_user3/profile/card#me
mappings:
  company:
    sources: company
    s:
      value: ex:$(company_id)
      targets: ceon_data
    po:
      - [ a, ceon-actorODP:Actor~iri ]
      - [ rdfs:label, $(company_label) ]
  acl:
    sources: acl
    s:
      targets: ceon_data_acl
    po:
      - [ a, acl:Authorization~iri ]
      - [ acl:agent, $(agent_webid)~iri ]
      - [ acl:accessTo, $(access_to)~iri ]
      - p: acl:mode
        o:
          value: acl:Read
          type: iri
        condition:
          function: idlab-fn:equal
          parameters:
            - [ grel:valueParameter, $(read_access) ]
            - [ grel:valueParameter2, Yes ]
      - p: acl:mode
        o:
          value: acl:Write
          type: iri
        condition:
          function: idlab-fn:equal
          parameters:
            - [ grel:valueParameter, $(write_access) ]
            - [ grel:valueParameter2, Yes ]
      - p: acl:mode
        o:
          value: acl:Control
          type: iri
        condition:
          function: idlab-fn:equal
          parameters:
            - [ grel:valueParameter, $(control_access) ]
            - [ grel:valueParameter2, Yes ]
  index:
    sources: acl
    s:
      value: ex:index
      targets: ceon_index
    po:
      - p: rdfs:seeAlso
        o:
          value: $(access_to)
          type: iri
  index_acl:
    sources: acl
    s:
      targets: ceon_index_acl
    po:
      - [ a, acl:Authorization~iri ]
      - [ acl:agent, $(agent_webid)~iri ]
      - [ acl:accessTo, ${OD_CSS11_BASE_URL}/construction_user3/ceon/index~iri ]
      - p: acl:mode
        o:
          value: acl:Read
          type: iri
        condition:
          function: idlab-fn:equal
          parameters:
            - [ grel:valueParameter, $(read_access) ]
            - [ grel:valueParameter2, Yes ]
      - p: acl:mode
        o:
          value: acl:Write
          type: iri
        condition:
          function: idlab-fn:equal
          parameters:
            - [ grel:valueParameter, $(write_access) ]
            - [ grel:valueParameter2, Yes ]
      - p: acl:mode
        o:
          value: acl:Control
          type: iri
        condition:
          function: idlab-fn:equal
          parameters:
            - [ grel:valueParameter, $(control_access) ]
            - [ grel:valueParameter2, Yes ]
